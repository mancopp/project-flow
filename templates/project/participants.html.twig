{% extends 'base.html.twig' %}

{% block title %}Participants
{% endblock %}

{% block body %}
  <div class="px-2 py-4 lg:px-6 lg:py-8">
		<h1 class="text-4xl font-bold mb-8">Task List</h1>
		<ul class="w-full flex-col">
			{% for user in users %}
				<li>
					<div class="block rounded-xl w-full mb-2 p-5 font-bold text-xl text-white bg-cyan-700 hover:bg-cyan-800">{{ user.username }} {{ user.email }} {{ user.role }}</div>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
