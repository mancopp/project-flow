{% extends 'base.html.twig' %}

{% block title %}Create Project
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-4xl font-bold mb-8">Create Project</h1>

		{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

		<div class="space-y-2">
			<label for="{{ form.title.vars.id }}" class="block text-lg font-medium text-gray-700">
				Title
			</label>
			{{ form_widget(form.title, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
			{{ form_errors(form.title) }}
		</div>

		<div class="space-y-2">
			<label for="{{ form.subtitle.vars.id }}" class="block text-lg font-medium text-gray-700">
				Subtitle
			</label>
			{{ form_widget(form.subtitle, {'attr': {'class': 'block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm'}}) }}
			{{ form_errors(form.subtitle) }}
		</div>

		<button class="mt-6 w-full inline-flex justify-center py-4 px-8 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
			Create
		</button>

		{{ form_end(form) }}
	</div>
{% endblock %}
